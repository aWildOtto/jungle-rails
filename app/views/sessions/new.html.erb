<div class="col-md-4"></div>
<div class="col-md-4">
  <h1>Login</h1>

  <%= form_tag('/login', method:'post', class: "form-group") do %>
    <div>
      Email: <%= text_field_tag("email", nil, class: 'form-control')%>
      Password: <%= password_field_tag("password", nil, class: 'form-control') %>
      <%= submit_tag("Submit", class: "btn btn-primary submit-btn") %>
    </div>
  <% end %>
</div>